<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/card_task_imageview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:tint="@color/colorOrange"
            android:src="@drawable/ic_directions_car_black_24dp"/>

        <LinearLayout
            android:layout_toRightOf="@id/card_task_imageview"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_task_tv_date"
                android:text="Jul 18 2018 - 17:14"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/card_task_tv_status"
                android:text="Completed"
                android:lines="1"
                android:textColor="@color/colorOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/card_task_title_drop"
                    android:text="Drop at :"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:lines="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/card_task_tv_drop_address"
                    android:layout_toRightOf="@id/card_task_title_drop"
                    android:text="Best Colony A, BS Devashi Marg,Chembur"
                    android:minLines="1"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>