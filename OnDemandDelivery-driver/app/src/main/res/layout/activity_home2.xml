<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </LinearLayout>

        <RelativeLayout
            style="@style/Both_Match_style">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                map:mapType="normal"/>

            <android.support.v7.widget.CardView
                android:clickable="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="2dp"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:id="@+id/home_card_tv_title"
                        style="@style/Match_Wrap_style"
                        android:maxLines="1"
                        android:textSize="11sp"
                        android:paddingTop="2dp"
                        android:textStyle="bold"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:drawableLeft="@drawable/ic_brightness_1_black_24dp"
                        android:textColor="@android:color/darker_gray"
                        android:paddingLeft="8dp"
                        android:text="Currently at"
                        />
                    <TextView
                        android:id="@+id/home_card_tv_subtitle"
                        android:layout_below="@id/home_card_tv_title"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        style="@style/Match_Wrap_style"
                        android:maxLines="1"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="6dp"
                        android:paddingRight="8dp"
                        android:scrollbars="horizontal"
                        android:text="66 Orchild, Pro, Worli East...I want to set padding right of drawable not complete side"
                        />
                    
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:id="@+id/left_drawer_rl_header"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/left_drawer_img_view"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:src="@drawable/bg_driver_placeholder"
                android:layout_height="50dp" />

            <TextView
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/left_drawer_img_view"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rahul Mandalkar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>
        <ListView
            android:id="@+id/left_drawer_listview"
            android:layout_below="@id/left_drawer_rl_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:choiceMode="singleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0dp"/>

    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
