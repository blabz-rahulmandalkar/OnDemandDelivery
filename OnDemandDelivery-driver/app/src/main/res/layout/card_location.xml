<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_dot"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:tint="@color/colorYellow"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:layout_width="12dp"
            android:layout_height="12dp"/>
        <TextView
            android:id="@+id/title"
            style="@style/Match_Wrap_style"
            android:maxLines="1"
            android:layout_toRightOf="@id/imv_dot"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/darker_gray"
            android:text="Currently at"
            />
        <TextView
            android:id="@+id/subtitle"
            android:layout_below="@id/title"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            style="@style/Match_Wrap_style"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="6dp"
            android:paddingRight="8dp"
            android:scrollbars="horizontal"
            android:text="801 Sai Samarth Business Park, Deonar Road, Deonar, Mumbai, Maharashtra, 400088,"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>