<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--<View-->
                <!--android:layout_width="8dp"-->
                <!--android:background="@color/colorPrimaryDark"-->
                <!--android:layout_height="wrap_content"/>-->

            <RelativeLayout android:layout_width="4dp"
            android:background="@drawable/bg_gradient"
            android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/colorOrange"
                        android:id="@+id/card_history_icon"
                        android:layout_width="32dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"

                        android:src="@drawable/ic_directions_car_black_24dp"
                        android:layout_height="32dp"/>

                    <TextView
                        android:text="Basic Mini"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/card_history_icon"
                        android:id="@+id/card_history_amb_type"
                        android:layout_width="wrap_content"
                        android:lines="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="7 July 2018"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/card_history_icon"
                        android:id="@+id/card_history_date"
                        android:layout_width="wrap_content"
                        android:lines="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Rs. 1100"
                        android:layout_alignParentRight="true"
                        android:id="@+id/card_history_amount"
                        android:layout_width="wrap_content"
                        android:lines="1"
                        android:layout_marginLeft="8dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentTop="true"
                        android:layout_height="32dp" />

                    <TextView
                        android:id="@+id/card_history_name"
                        android:text="Mukesh Sharma"
                        android:layout_toLeftOf="@id/card_history_amount"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/card_history_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp" />

                </RelativeLayout>

                <View
                    android:background="@color/colorLightDark"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:text="Request ID #AM9860616030"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>