<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_image_login"
    android:layout_height="match_parent"
    tools:context="com.driverapp.activities.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#99000000"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_above="@id/login_input_view"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/login_logo_view"
                android:layout_centerInParent="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/login_logo_view_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_room_black_24dp"
                    android:tint="@color/colorWhite"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />

                <TextView
                    android:id="@+id/login_logo_view_tv_app_name"
                    android:layout_toRightOf="@id/login_logo_view_icon"
                    android:layout_margin="8dp"
                    android:text="SOSCare"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:lines="1"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/login_input_view"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_textfield"
                android:backgroundTint="#55ffffff"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/login_imv_phonenumber"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_phone_android_black_24dp"
                    android:tint="@color/colorWhite"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <EditText
                    android:id="@+id/login_et_phonenumber"
                    android:layout_toRightOf="@id/login_imv_phonenumber"
                    android:layout_centerVertical="true"
                    android:hint="Phone number"
                    android:background="#00000000"
                    android:inputType="phone"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_textfield"
                android:backgroundTint="#55ffffff"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/login_imv_otp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:rotation="90"
                    android:src="@drawable/ic_vpn_key_black_24dp"
                    android:tint="@color/colorWhite"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <EditText
                    android:id="@+id/login_et_otp"
                    android:layout_toRightOf="@id/login_imv_otp"
                    android:layout_centerVertical="true"
                    android:hint="OTP"
                    android:inputType="numberPassword"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:background="#00000000"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <Button
                android:id="@+id/login_btn_login"
                android:layout_width="match_parent"
                android:text="Login"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:background="@drawable/bg_textfield"
                android:backgroundTint="#20EAE1"
                android:layout_height="48dp">
            </Button>

            <Button
                android:id="@+id/login_btn_resend_otp"
                android:layout_width="wrap_content"
                android:paddingLeft="16dp"
                android:clickable="true"
                android:layout_marginTop="8dp"
                android:paddingRight="16dp"
                android:text="Resend OTP"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:background="?android:selectableItemBackground"
                android:backgroundTint="#20EAE1"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
